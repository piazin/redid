<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/home/style.css">
    <link rel="stylesheet" href="/css/home/style-read-document.css">
    <link rel="stylesheet" href="/js/prismjs/prism.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title><%= document.title %></title>
</head>
<body>
    
    <%- include('../../partials/header'); %>
    
    <main class="rd_main main">
        
        <section class="cover" style="background-image: url('<%= document.urlThumbnail %>');"></section>

        <div class="main-contend">
            <button class="back-to-top" onclick="backToTop()">
                <ion-icon name="arrow-up-outline"></ion-icon>
                <span id="progress"></span>
            </button>

            <div class="card-container" translate="no" data-aos="fade-up"> 
                <h1 class="title-cover title-document"><%= document.title %></h1>
                <span class="title-category">
                    <%= document.category.title %>
                    <a class="absolute-link" href="/category/<%= document.category.slug %>"></a>
                </span>
    
                <%- document.body %>   
               
            </div>
        </div>
        
        
    </main>
    
    <%- include('../../partials/footer-home'); %>
</body>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script src="/js/prismjs/prism.js"></script>
<script>
    AOS.init();
</script>
<%- include('../../partials/footer'); %>

</html>

