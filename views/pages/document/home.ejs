<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../../partials/head'); %>
    <link rel="stylesheet" href="/css/global/style.css">
    <link rel="stylesheet" href="/css/category/home.css">
    <title>Documentos</title>
</head>
<body>
    <div class="columns">

        <%- include('../../partials/navigator'); %>
        
        <div class="column is-11">
            <section class="section is-fullhd">
                <h1 class="title">Documentos</h1>
                <div class="table-container">
                    
                    <table class="table is-bordered is-striped is-fullwidth">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Titulo</th>
                                <th>Slug</th>
                                <th>Categoria ID</th>
                                <th>Post preview</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% documents.forEach(document => { %>
                                <tr>
                                    <th><%= document.id %></th>
                                    <th><%= document.title %></th>
                                    <th><%= document.slug %></th>
                                    <th><%= document.category.title %></th>
                                    <th>
                                        <figure class="image is-48x48 mb-6">
                                            <img class="mb-2" src="<%= document.urlThumbnail %>" alt="picture">
                                        </figure>
                                    </th>
                                    <th>
    
                                        <a href="/admin/document/edit/<%= document.id %>" class="button">
                                            <ion-icon name="create-outline"></ion-icon>
                                        </a>
                                        <form class="is-inline-block" action="/admin/document/delete/<%= document.id %>" onsubmit="confirmSendDelete(event, this)" method="post">
                                            <button class="button is-danger">
                                                <ion-icon name="trash-outline"></ion-icon>
                                            </button>
                                        </form>
    
                                    </th>
                                </tr>   
                            <% }) %>
                            
                        </tbody>
                    </table>
                </div>
            </section>
        </div>

    </div>

    <a href="/admin/document/create" id="btn-create-category">
        <ion-icon name="add-outline"></ion-icon>
    </a>
    
</body>
<%- include('../../partials/footer'); %>
<script>
    window.addEventListener('resize', ()=>{
        var windowWidth = document.documentElement.clientWidth;

        if(windowWidth <= 1000){
            document.querySelector('.table').classList.remove('is-fullwidth');
        } else {
            document.querySelector('.table').classList.add('is-fullwidth');
        }
    })
</script>
</html>